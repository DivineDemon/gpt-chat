generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum MessageType {
  CLIENT
  BOT
}

model User {
  id        String  @id @default(uuid())
  imageUrl  String?
  email     String  @unique
  firstName String?
  lastName  String?

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  Message   Message[]

  @@index([email], map: "email_index")
}

model Message {
  id      String      @id @default(uuid())
  type    MessageType
  content String
  userId  String

  user User @relation(fields: [userId], references: [id])

  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  Conversation   Conversation? @relation(fields: [conversationId], references: [id])
  conversationId String?

  @@index([conversationId], map: "conversation_index")
}

model Conversation {
  id       String    @id @default(uuid())
  messages Message[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
